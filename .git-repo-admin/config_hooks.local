[githooks]
	debug = 0
	plugin = CheckLog
	plugin = CheckFile
	hooks = hooks.d
[githooks "checklog"]
	match = "^.*$"
	title-required = 0
	title-max-widt = 0
	title-period = allow
	body-max-width = 0
	spelling = 0
	spelling-lang = EN
[githooks "checkfile"]
	name = *.p[lm] cd ${REPO_ADMIN_DIR} && carton exec \"perlcritic --profile .perlcriticrc --gentle --verbose 5 {}\"
